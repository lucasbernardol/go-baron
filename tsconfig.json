{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES6"],

    "allowJs": true,
    "checkJs": false,

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@data/*": ["api/data/*"],
      "@shared/*": ["shared/*"]
    },

    "removeComments": true,
    "isolatedModules": false,

    "strict": false,
    "typeRoots": ["./node_modules/@types/", "./src/@types"],

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
